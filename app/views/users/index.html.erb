<% provide(:title, 'Marathoners') %>
<div class="hero-unit">
	<h1>The brave. The strong. The Marathon Men</h1>
	<div class="row-fluid center">
		<div class="span4 offset4">
		<%= will_paginate %>
		<ul class="users">
		<% @users.each do |user| %>
			<li><%= link_to user.name, user, class: "btn btn-inverse btn-block" %></li>
		<% end %>
		</ul>
		<%= will_paginate %>
		</div>
	</div>
</div>