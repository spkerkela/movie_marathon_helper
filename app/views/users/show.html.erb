<% provide(:title, @user.name) %>

<div class="row">
	<aside class="span5">
	<div class="hero-unit center">
		<section>
			<h1><%= @user.name %></h1>
		</section>
	</div>
	</aside>
	<div class="span8">
		<div class="hero-unit">
			<% if @user.microposts.any? %>
			<h3>Posts in total: <%= @user.microposts.count %></h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts, class: "pagination pagination-centered pagination-small" %>
			<% end %>
		</div>
	</div>
</div>