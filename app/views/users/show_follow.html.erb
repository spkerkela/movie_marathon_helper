<% provide(:title, @title) %>
<div class="row-fluid">
	<aside class="span4">
		<section>
			<h1 class="logo"><%= @user.name %></h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
			<% if @users.any? %>
			<div class="user_avatars">
				<!-- avatars will go here someday -->
			</div>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
		<% if @users.any? %>
		<ul class="users">
			<%= render @users %>
		</ul>
		<%= will_paginate %>
		<% end %>
	</div>
</div>