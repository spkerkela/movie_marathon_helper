<li id="<%= feed_item.id %>">
<span class="content">
	<%= feed_item.content %>
</span>
<span class="timestamp">
<small>
	<em>Posted <%= time_ago_in_words feed_item.created_at %> ago </em>
	<% if current_user? feed_item.user %>
		<%= link_to "delete", feed_item, method: :delete, data: { confirm: "Delete post?" }, title: feed_item.content %>
	<% else %>
	 <em>by</em> <%= link_to feed_item.user.name, feed_item.user %>
	<% end %>
</small>
</span>
</li>
