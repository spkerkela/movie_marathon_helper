<header class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container-fluid">
			<a class="brand logo" href="<%= root_path %>">Movie Marathon Helper</a>
			<nav>
            <ul class="nav pull-right">
              <li><%= link_to "Home",    root_path %></li>
              <li><%= link_to "Help",    help_path %></li>
              <% if signed_in? %>
              	<li><%= link_to "Marathon Men", users_path %></li>
                <li><%= link_to "Movies", movies_path%></li>
                <div class="navbar-form pull-left no_margin">
                <%= form_tag controller: "static_pages", action: "movie_show" do %>
                  <%= text_field_tag :movie,nil ,placeholder: 'Movie title or imdbID', class: "span3" %>
                  <%= submit_tag("Search movie", class: "btn btn-inverse") %>
                <% end %>
                </div>
              	<li id="fat-menu" class="dropdown">
              		<a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
              	<ul class="dropdown-menu">
              		<li><%= link_to "Profile", current_user %></li>
              		<li><%= link_to "Settings", edit_user_path(current_user) %></li>
              		<li class="divider"></li>
              		<li>
                  		<%= link_to "Sign out", signout_path, method: "delete" %>
                	</li>
              	</ul>
              </li>
              <% else %>
        		<li><%= link_to "Sign in", signin_path %></li>
              <% end %>
            </ul>
          </nav>
		</div>
	</div>
</header>